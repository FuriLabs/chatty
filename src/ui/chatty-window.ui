<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.16"/>
  <template class="ChattyWindow" parent="HdyApplicationWindow">
    <property name="can_focus">False</property>
    <property name="default_width">360</property>
    <property name="default_height">576</property>
    <property name="width-request">300</property>
    <property name="height-request">150</property>

    <child>
      <object class="GtkBox">
        <property name="visible">1</property>
        <property name="orientation">vertical</property>

        <child>
          <object class="ChattyHeaderBar" id="header_bar">
            <property name="visible">1</property>
            <signal name="back-clicked" handler="window_back_clicked_cb" swapped="yes"/>
          </object>
        </child>

        <child>
          <object class="HdyLeaflet" id="content_box">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="transition-type">slide</property>
            <property name="can-swipe-back">True</property>
            <signal name="notify::visible-child-name" handler="window_content_box_changed" swapped="yes"/>
            <signal name="notify::folded" handler="notify_fold_cb" after="yes" swapped="yes"/>
            <child>
              <object class="GtkBox" id="sidebar">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>

                <!-- Search bar -->
                <child>
                  <object class="HdySearchBar" id="chats_search_bar">
                    <property name="visible">True</property>
                    <property name="hexpand">False</property>
                    <signal name="notify::search-mode-enabled" handler="window_search_enable_changed_cb" swapped="yes"/>
                    <child>
                      <object class="GtkBox">
                        <property name="visible">True</property>
                        <style>
                          <class name="linked"/>
                        </style>
                        <child>
                          <object class="GdTaggedEntry" id="chats_search_entry">
                            <property name="visible">True</property>
                            <property name="hexpand">True</property>
                            <signal name="search-changed" handler="window_search_changed_cb" swapped="yes"/>
                            <signal name="tag-button-clicked" handler="search_tag_button_clicked_cb" swapped="yes"/>
                            <signal name="activate" handler="window_search_entry_activated_cb" swapped="yes"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkMenuButton">
                            <property name="visible">1</property>
                            <property name="popover">popover</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Chat list view -->
                <child>
                  <object class="ChattyChatList" id="chat_list">
                    <property name="visible">1</property>
                    <property name="hexpand">0</property>
                    <property name="width_request">300</property>
                    <signal name="selection-changed" handler="window_chat_list_selection_changed" swapped="yes"/>
                  </object>
                </child>

              </object>
              <packing>
                <property name="name">sidebar</property>
              </packing>
            </child>

            <child>
              <object class="GtkSeparator">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <style>
                  <class name="sidebar"/>
                </style>
              </object>
              <packing>
                <property name="navigatable">False</property>
              </packing>
            </child>

            <child>
              <object class="ChattyChatView" id="chat_view">
                <property name="visible">True</property>
                <property name="width_request">300</property>
              </object>
              <packing>
                <property name="name">content</property>
              </packing>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>

  <object class="GtkPopover" id="popover">
    <property name="position">bottom</property>
    <style>
      <class name="no-padding"/>
    </style>
    <child>
      <object class="GtkListBox" id="protocol_list">
        <property name="visible">True</property>
        <property name="selection-mode">none</property>
        <signal name="row-activated" handler="window_search_protocol_changed_cb" swapped="yes"/>
      </object>
    </child>
  </object>

</interface>
