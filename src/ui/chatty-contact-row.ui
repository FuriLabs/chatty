<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ChattyContactRow" parent="GtkListBoxRow">
    <property name="child">
      <object class="GtkBox">
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="spacing">9</property>
        <child>
          <object class="GtkImage" id="avatar"/>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">1</property>
            <property name="vexpand">1</property>
            <property name="valign">center</property>
            <property name="spacing">3</property>
            <child>
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="name">
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="bold-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="timestamp">
                    <attributes>
                      <attribute name="scale" value="0.7"></attribute>
                    </attributes>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="description">
                    <property name="ellipsize">end</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="message_count">
                    <style>
                      <class name="unread-badge"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
