<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ChattyMmChatInfo" parent="ChattyChatInfo">

    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="ChattyAvatar" id="avatar">
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="size">96</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Group Title -->
    <child>
      <object class="AdwPreferencesGroup" id="title_group">
        <property name="title" translatable="yes">Title</property>
        <child>
          <object class="GtkEntry" id="title_entry">
            <property name="placeholder-text" translatable="yes">Blank for default</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Add Contact -->
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Group Members</property>
        <child>
          <object class="GtkListBox" id="contacts_list_box">
            <property name="hexpand">1</property>
            <property name="vexpand">0</property>
            <property name="selection-mode">none</property>
            <style>
              <class name="content"/>
            </style>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
